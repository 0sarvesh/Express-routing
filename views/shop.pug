extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/main.css")

block content
        main
            if prods.length>0
                .grid
                    each product in prods 
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            .card__image 
                                img(src="https://m.media-amazon.com/images/I/91yxWnMzkSL._AC_UF1000,1000_QL80_.jpg" alt="img")
                            div.card__content
                                h2.product__price $19.99
                                p.product__description A very intresting book about so many 
                            .card__action
                                button.btn Add to Cart
            else
               h1 No Products